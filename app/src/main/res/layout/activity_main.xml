<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etExpression"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:background="@color/colorPrimary"
        android:textColor="@color/textBtnColor"
        android:textSize="12pt"
        android:focusable="false"
        android:focusableInTouchMode="false">
    </EditText>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout"
        android:background="@color/colorPrimary"
        android:layout_weight="3"
        >

        <Button
            style="@style/Btn"
            android:text="@string/equalsText"
            android:id="@+id/btnEquals"
            android:background="@color/colorPrimary"
            >
        </Button>

        <EditText
            android:id="@+id/etAnswer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/textBtnColor"
            android:textSize="12pt"
            >
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/linearLayout1"
        >
        <Button
            style="@style/Btn"
            android:text="@string/leftText"
            android:id="@+id/btnLeft">
        </Button>
        <Button
            style="@style/Btn"
            android:text="@string/rightText"
            android:id="@+id/btnRight">
        </Button>
        <Button
            style="@style/Btn"
            android:text="@string/percentText"
            android:id="@+id/btnClear">
        </Button>
        <Button
            style="@style/Btn"
            android:text="@string/delText"
            android:id="@+id/btnDel"
            android:background="@color/operationsBtnsBrighterColor">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/linearLayout2"
        >
        <Button
            style="@style/Btn"
            android:text="@string/oneText"
            android:id="@+id/btnOne">
        </Button>
        <Button
            style="@style/Btn"
            android:text="@string/twoText"
            android:id="@+id/btnTwo">
        </Button>
        <Button
            style="@style/Btn"
            android:text="@string/threeText"
            android:id="@+id/btnThree">
        </Button>
        <Button
            style="@style/Btn"
            android:text="@string/divText"
            android:id="@+id/btnDiv"
            android:background="@color/operationsBtnsColor">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <Button
            style="@style/Btn"
            android:id="@+id/btnFour"
            android:text="@string/fourText">
        </Button>

        <Button
            android:id="@+id/btnFive"
            android:text="@string/fiveText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnSix"
            android:text="@string/sixText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnMult"
            android:text="@string/multText"
            style="@style/Btn"
            android:background="@color/operationsBtnsColor">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <Button
            android:id="@+id/btnSeven"
            android:text="@string/sevenText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnEight"
            android:text="@string/eightText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnNine"
            android:text="@string/nineText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnSub"
            android:text="@string/minText"
            style="@style/Btn"
            android:background="@color/operationsBtnsColor">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <Button
            android:id="@+id/btnBraces"
            android:text="@string/parenText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnZero"
            android:text="@string/zeroText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnDot"
            android:text="@string/dotText"
            style="@style/Btn">
        </Button>

        <Button
            android:id="@+id/btnAdd"
            android:text="@string/addText"
            style="@style/Btn"
            android:background="@color/operationsBtnsColor">
        </Button>
    </LinearLayout>
</LinearLayout>